<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="buzz.client.class">Buzz\Client\Curl</parameter>
        <parameter key="buzz.message_factory.class">Buzz\Message\Factory\Factory</parameter>
        <parameter key="buzz.browser.class">Buzz\Browser</parameter>

        <parameter key="manhattan.log.configuration.class">Manhattan\LogBundle\Log\Configuration</parameter>
        <parameter key="manhattan.log.connection.class">Manhattan\LogBundle\Client\Connection</parameter>
        <parameter key="manhattan.log.handler.catcherror.class">Manhattan\LogBundle\Handler\CatchErrorHandler</parameter>
    </parameters>

    <services>
        <service id="buzz.message_factory" class="%buzz.message_factory.class%" public="false" />
        <service id="buzz.client" class="%buzz.client.class%" public="false" />

        <service id="buzz" class="%buzz.browser.class%">
            <argument type="service" id="buzz.client" />
            <argument type="service" id="buzz.message_factory" />
        </service>

        <service id="manhattan.log.configuration" class="%manhattan.log.configuration.class%">
            <argument>%manhattan_log.configuration.api_key%</argument>
            <argument>%manhattan_log.configuration.uri%</argument>
        </service>

        <service id="manhattan.log.connection" class="%manhattan.log.connection.class%">
            <argument type="service" id="buzz" />
            <argument type="service" id="manhattan.log.configuration" />
        </service>

        <service id="manhattan.log.catecherror" class="%manhattan.log.handler.catcherror.class%">
            <argument type="service" id="manhattan.log.connection" />
        </service>
    </services>

</container>
